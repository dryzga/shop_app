<h1>Edit category</h1>

<%= form_for(@category, :url => admin_category_path(@category)) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to '< Back', admin_categories_path %>