<h1><%= @category.name%></h1>

<h1>List of Products</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Price</th>
    <th></th>
    <th></th>
  </tr>
 
<% @category.products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td><%= link_to 'Show', product %></td>
    <td>
    <%= form_tag :controller => :order, :action => :add, :id => product do %>
      <%= submit_tag 'Add to cart' %>
    <% end %>
    </td>
  </tr>
<% end %> 
</table>
 
<br />