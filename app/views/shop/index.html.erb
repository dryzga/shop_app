
<h1>List of Categories</h1>

<table>
  
 
 
<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= link_to 'Show', category %></td>
  </tr>
<% end %>	
</table>



<h1>List of Products</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Price</th>
    <th>Category</th>.
    <th></th>
    <th></th>
  </tr>
 
<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td><%= product.category.name %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Add to cart',url_for(:action => 'add_cart') %></td>
  </tr>
<% end %>	
</table>
 
